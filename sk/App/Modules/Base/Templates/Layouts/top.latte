<!DOCTYPE html>

<html lang="{constant("LANG")}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{ifset $metaDescription} {$metaDescription} {else} Společnost Pro-Oil se zabývá prodejem a distribucí kvalitních značkových motorových, převodových olejů pro osobní i nákladní vozy za přijatelné ceny. Známé trh s oleji a mazivy.{/ifset}">
        <meta name="keywords" content="{ifset $metaKeywords} {$metaKeywords} {else} castrol,mol,mogul,motor,olej,oil,vozy,vůz,osobní,auto,mineralni,5w,10w,15w,api,sae,levný,levně,kvalitní{/ifset}">
        <meta name="author" content="RNDr. Miroslav Petráš, petras.miroslav@email.cz, www.rksystem.cz">
        <link rel="shortcut icon" href="{constant('ROOT_WEB_WWW')}/favicon.png" type="image/x-icon">

        <!-- STYLES FILES -->
        {block stylesFiles}

        {control css}
        {control cssDynamic}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        {/block}
        <!-- /STYLES FILES -->

        <!-- STYLES -->
        {block styles}{/block}
        <!-- /STYLES -->

        <title>{ifset title}{include title|striptags} | {/ifset}Pro-Oil Morava s.r.o.</title>

        <script type="text/javascript">
            RKW = {};
            RKW.lang = {constant("LANG")};
            RKW.tinyMCE = {
                class: {constant("TINY_MCE_CLASS")},
                baseurl: '{constant("TINY_MCE_BASEURL")|noescape}',
                content_css: '{constant("ROOT_WEB_WWW")|noescape}/media/bootstrap/css/front.css'
            };
            RKW.DPH = {constant("DPH")};
        </script>
    </head>

    {if isset($googleUniversalAnalytics) && $googleUniversalAnalytics == true}
        <!-- google universal analytics -->
        <script type="text/javascript">
            (function (i, s, o, g, r, a, m) {
